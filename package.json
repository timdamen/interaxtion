{
  "name": "interaxtion",
  "version": "0.1.1",
  "description": "Framework-agnostic analyzer for automated accessibility testing.",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "accessibility",
    "a11y",
    "aria",
    "testing",
    "dialog",
    "modal",
    "patterns",
    "wcag",
    "axe",
    "browser",
    "vitest",
    "playwright"
  ],
  "homepage": "https://github.com/timdamen/interaxtion#readme",
  "bugs": {
    "url": "https://github.com/timdamen/interaxtion/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timdamen/interaxtion.git"
  },
  "author": "Tim Damen <hello@timdamen.io>",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "pnpm run build:node && pnpm run build:browser",
    "build:node": "tsdown",
    "build:browser": "esbuild src/browser.ts --bundle --format=iife --global-name=interaxtion --outfile=dist/browser.js --platform=browser --external:jsdom --minify --sourcemap",
    "dev": "tsdown --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.1",
    "@vitest/browser": "^4.0.14",
    "@vitest/browser-playwright": "^4.0.14",
    "bumpp": "^10.3.1",
    "esbuild": "^0.27.0",
    "playwright": "^1.57.0",
    "tsdown": "^0.16.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "axe-core": "^4.11.0",
    "jsdom": "^27.2.0"
  }
}
